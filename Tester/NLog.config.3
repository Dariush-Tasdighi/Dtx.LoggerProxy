<?xml version="1.0" encoding="utf-8" ?>
<nlog
	xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
	autoReload="true"
	throwExceptions="false"
	internalLogLevel="Trace"
	internalLogFile="C:\TEMP\NLog-Internal.log"
	>

	<targets>
		<target name="Target1" xsi:type="File" fileName="LogFile01.txt"/>
		<target name="Target2" xsi:type="File" fileName="LogFile02.txt"/>
		<target name="Target3" xsi:type="File" fileName="LogFile03.txt"/>
		<target name="Target4" xsi:type="File" fileName="LogFile04.txt"/>
		<target name="Target5" xsi:type="File" fileName="LogFile05.txt"/>
		<target name="Target6" xsi:type="File" fileName="LogFile06.txt"/>
	</targets>

	<!--<rules>
		<logger name="*" minlevel="Trace" maxlevel="Trace" writeTo="Target1"/>
		<logger name="*" minlevel="Debug" maxlevel="Debug" writeTo="Target2"/>
		<logger name="*" minlevel="Info" maxlevel="Info" writeTo="Target3"/>
		<logger name="*" minlevel="Warn" maxlevel="Warn" writeTo="Target4"/>
		<logger name="*" minlevel="Error" maxlevel="Error" writeTo="Target5"/>
		<logger name="*" minlevel="Fatal" maxlevel="Fatal" writeTo="Target6"/>
	</rules>-->

	<rules>
		<logger name="*" level="Trace" writeTo="Target1"/>
		<logger name="*" level="Debug" writeTo="Target2"/>
		<logger name="*" level="Info" writeTo="Target3"/>
		<logger name="*" level="Warn" writeTo="Target4"/>
		<logger name="*" level="Error" writeTo="Target5"/>
		<logger name="*" level="Fatal" writeTo="Target6"/>
	</rules>
</nlog>
