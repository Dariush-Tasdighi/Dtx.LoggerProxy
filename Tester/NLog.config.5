<?xml version="1.0" encoding="utf-8" ?>
<nlog
	xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
	autoReload="true"
	throwExceptions="false"
	internalLogLevel="Trace"
	internalLogFile="C:\TEMP\NLog-Internal.log"
	>

	<targets>
		<wrapper-target xsi:type="AsyncWrapper">
			<target name="Target1" xsi:type="File" fileName="File21.txt" archiveEvery="Day"/>
			<target name="Target2" xsi:type="Mail" addNewLines="true" deliveryMethod="Network" enableSsl="false" encoding="utf-8" html="true" priority="" useSystemNetMailSettings="false" smtpUserName="" smtpPassword="" smtpAuthentication="Basic" smtpPort="25" smtpServer="" to=""/>
		</wrapper-target>
	</targets>

	<rules>
		<logger name="*" minlevel="Trace" writeTo="Target1"/>
		<logger name="*" level="Fatal" writeTo="Target2"/>
	</rules>
</nlog>
